<meta charset="utf-8"/>
<meta content="width=device-width, initial-scale=1.0" name="viewport"/>

{% feed_meta %}
{% seo %}

{% capture resource_title %}
  {{ title | strip_html | strip | truncate: 100 }}
{% endcapture %}
<title>
  {% if title != "Index" %}
    {{ resource_title | escape }}
    |
    {{ metadata.title | escape }}
  {% else %}
    {{ metadata.title | escape }}
  {% endif %}
</title>

<meta name="description" content="{{ metadata.description }}"/>

<link rel="stylesheet" href="{% asset_path css %}"/>
<script src="{% asset_path js %}" defer></script>

{% if bridgetown.environment == "production" %}
  <script data-site="VFRRSROW" defer src="https://phone-abstracted.stephendolan.com/script.js"></script>
{% endif %}

{% live_reload_dev_js %}