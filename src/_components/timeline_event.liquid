<li>
  <div class="relative pb-8">
    {%- if is_last == false %}
      <span aria-hidden="true" class="absolute top-4 left-4 -ml-px h-full w-0.5 bg-white"></span>
    {% endif %}
    
    <div class="relative flex space-x-3">
      <div>
        <span class="h-8 w-8 rounded-full bg-gray-400 flex items-center justify-center ring-8 ring-gray-700">
          <svg aria-hidden="true" class="h-5 w-5 text-white" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            {%- if event.svg_path %}
              {{ event.svg_path }}
            {% endif %}
          </svg>
        </span>
      </div>
      <div class="min-w-0 flex-1 pt-1.5 flex justify-between space-x-4">
        <div>
          <p class="text-sm text-gray-400">{{ event.description }}
            <a class="font-medium text-gray-200 hover:text-white" href="{{ event.link }}" rel="noopener noreferrer" target="_blank">{{ event.name }}</a>
          </p>
        </div>
        <div class="text-right text-sm whitespace-nowrap text-gray-400">
          <time datetime="{{ event.date | date: "%Y-%m-%d" }}">{{ event.date | date: "%b %Y"}}</time>
        </div>
      </div>
    </div>
  </div>
</li>