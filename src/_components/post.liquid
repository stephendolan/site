<li>
  <a
    class="block hover:bg-gray-900 hover:bg-opacity-50"
    href="{{ post.relative_url }}"
  >
    <div class="flex items-center px-4 py-4 sm:px-6">
      <div class="min-w-0 flex-1 sm:flex sm:items-center sm:justify-between">
        <div class="w-full truncate">
          <p class="truncate font-medium text-gray-300">{{ post.title }}</p>

          <div class="mt-2 flex space-x-4">
            <div class="flex w-36 items-center text-sm text-gray-400">
              <!-- Heroicon name: solid/calendar -->
              <svg
                aria-hidden="true"
                class="mr-1.5 h-5 w-5 flex-shrink-0"
                fill="currentColor"
                viewbox="0 0 20 20"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  clip-rule="evenodd"
                  d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z"
                  fill-rule="evenodd" />
              </svg>
              <p>
                <time datetime="{{ post.date }}">
                  {{- post.date | date: '%B %-d, %Y' -}}
                </time>
              </p>
            </div>

            {% for tag in post.tags %}
              {% render 'post_tag', tag: tag %}
            {% endfor %}
          </div>
        </div>
      </div>
      <div class="ml-5 flex-shrink-0">
        <svg
          aria-hidden="true"
          class="h-5 w-5 text-gray-400"
          fill="currentColor"
          viewbox="0 0 20 20"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            clip-rule="evenodd"
            d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
            fill-rule="evenodd" />
        </svg>
      </div>
    </div>
  </a>
</li>
