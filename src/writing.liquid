---
title: Writing
---

<div class="flex justify-between items-center mb-5 ml-2">
  <h1 class="text-3xl font-bold mb-2 sm:mb-0">My writing</h1>

  <div>
    <a class="ml-2 inline-flex items-center px-2.5 py-1.5 border border-transparent text-xs font-medium rounded text-gray-700 bg-gray-200 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500" href="/feed/writing.xml">
      <svg
        class="h-3 w-3"
        fill="currentColor"
        viewbox="0 0 20 20"
        xmlns="http://www.w3.org/2000/svg">
        <path d="M5 3a1 1 0 000 2c5.523 0 10 4.477 10 10a1 1 0 102 0C17 8.373 11.627 3 5 3z" />
        <path d="M4 9a1 1 0 011-1 7 7 0 017 7 1 1 0 11-2 0 5 5 0 00-5-5 1 1 0 01-1-1zM3 15a2 2 0 114 0 2 2 0 01-4 0z" />
      </svg>

      <p class="ml-1">RSS Feed</p>
    </a>
  </div>
</div>

{% assign featured_post = collections.writing.resources | where: "featured", true | first %}

  <a href="{{ featured_post.relative_url }}" class="bg-gray-800 hover:bg-gray-900 hover:bg-opacity-50 bg-opacity-50 flex shadow overflow-hidden rounded-md">
  <!-- https://unsplash.com/documentation#supported-parameters -->
  {% assign unsplash_api_parameters = "?fit=crop&auto=format&h=192&w=224" %}
  <img class="hidden lg:block h-48 w-56 object-cover" src="{{ featured_post.image }}{{ unsplash_api_parameters }}">

  <div class="px-4 py-4">
    <p class="text-sm text-gray-300">
      <time datetime="{{ post.date }}">{{ featured_post.date | date: "%B %-d, %Y" }}</time>
    </p>

    <div>
      <p class="text-xl font-semibold text-gray-100 line-clamp-1" title="{{ featured_post.title }}">
        {{ featured_post.title }}
      </p>

      <p class="mt-3 text-base text-gray-300 line-clamp-2" title="{{ featured_post.description }}">
        {{ featured_post.description }}
      </p>
    </div>

    <div class="mt-3">
      <span class="text-base font-semibold text-teal-400">
        Read full post
      </span>
    </div>
  </div>
</a>

<section class="mt-6 bg-gray-800 divide-y divide-gray-600 bg-opacity-80 rounded-md overflow-hidden shadow">
  <h2 class="text-xl bg-gradient-to-r from-gray-800 via-gray-800 to-blue-900 font-semibold p-4">Productivity</h2>
  {% assign productivity_posts = collections.writing.resources | where: "featured", false | where: "category", "Productivity" %}
  <ul class="divide-y divide-gray-600" role="list">
    {% for post in productivity_posts %}
      {% render "post", post: post %}
    {% endfor %}
  </ul>
</section>

<section class="mt-6 bg-gray-800 divide-y divide-gray-600 bg-opacity-80 rounded-md overflow-hidden shadow">
  <h2 class="text-xl bg-gradient-to-r from-gray-800 via-gray-800 to-emerald-900 font-semibold p-4">Development</h2>
  {% assign dev_posts = collections.writing.resources | where: "featured", false | where: "category", "Development" %}
  <ul class="divide-y divide-gray-600" role="list">
    {% for post in dev_posts %}
      {% render "post", post: post %}
    {% endfor %}
  </ul>
</section>